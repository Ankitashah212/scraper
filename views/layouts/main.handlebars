<style>
	body {
		background-color: whitesmoke;
	}

	button {
		width: 250px;
		height: 50px;
		margin-top: 20px;
		margin-bottom: 20px;
	}

	.option {
		color: #0D0D1D;
		font-size: 18px;

	}

	.active {
		color: red;
	}

	.myArticle {
		background-color: rgb(177, 177, 218);
		color: #1F1515;
		margin: 20px;
		padding: 5px;
		border: 1px solid grey;
		font-size: 18px;
	}

	.header {
		margin: 20px;
	}

	.optionButton {
		background-color: #9A9AC0;

	}
</style>

<body>
	<div class="header">
		<h2><a href="/" >Mongo Scraper</a></h2>
		<ul class="nav nav-tabs">
			<li class="nav-item">
				<form action="/scrape" method="get">
					<button type="submit" id="scrape" class="btn btn-default navbar-btn optionButton">Scrape New Articles</button>
				</form>
			</li>

			<li class="nav-item">
				<form action="/articles" method="get">
					<button type="submit" class="btn btn-default navbar-btn optionButton">Saved Articles</button>
				</form>
			</li>
		</ul>
	</div>

	<div class="result">
		{{{ body }}}
	</div>
	
